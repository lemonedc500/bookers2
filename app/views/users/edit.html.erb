<%= form_with model: @user,url:update_user_path(@user.id), method: :patch do |f| %>
<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>User info</h2>
<% if @user.errors.any? %>
     <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>

<div class="form-group">

  <h6>Name</h6>
  <%= f.text_field :name %>
  </div>
  
  <div class="form-group">
  <h6>Image</h6>
  <%= f.file_field :profile_image, accept: "image/*" %>
  </div>
  
  <div class="form-group">
  <h6>Introduction</h6>
  <%= f.text_area :introduction %>
  </div>
  
  <%= f.submit 'Update User',class:"btn btn-secondary" %>
  
<% end %>
</div>
</div>
</div>