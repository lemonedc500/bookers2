<%= render 'common', user: @user, new_book: @new_book %>
 
<div class="col-md-8 offset-md-1">
 <p></p>
  <h2>Books</h2>
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
     <th></th>
     <th><h6>Title</h6></th>
     <th><h6>Opinion</h6></th>
     <th colspan="3"></th>
     </tr>
    </thead>
   <tbody>
    <% @book.each do |book| %>
     <tr>
      <td>
       <%= link_to image_tag @user.get_profile_image(100,100) %>
      </td>
      <td>
       <%= link_to book.title,book_path(book.id) %>
      </td>
      <td>
       <%= book.body %>
      </td>
      </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>
    