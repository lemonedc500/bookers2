<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <p></p>
   <h2>User info</h2>
   <p><%= image_tag @user.get_profile_image(100,100) %></p>
    <table class="table">
     <tbody>
     <tr></tr>
      <tr>
       <th>name<th><%= @user.name %></th></th>
      </tr>
      <th>introduction<th><%= @user.introduction %></th></th>
     </tbody>
    </table>
    
    <%= link_to edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block" do %>
     <i class="fas fa-user-cog" style="color: #6c757d;"></i>
     <% end %>
    
<h2 class="mt-3">New book</h2>
<%= form_with(model: @new_book, url: books_path) do |f| %>
 
 <div class="form-group">
  <h6>Title</h6>
  <%= f.text_field :title %>
 </div>
 
 <div class="form-group">
  <h6>Opinion</h6>
  <%= f.text_area :body %>
 </div>
 
 <div class="form-group">
  <%= f.submit 'Create Book',class:"btn btn-success" %>
 </div>
<% end %>
</div> 
 
<div class="col-md-8 offset-md-1">
 <p></p>
  <h2>Books</h2>
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
     <th></th>
     <th><h6>Title</h6></th>
     <th><h6>Opinion</h6></th>
     <th colspan="3"></th>
     </tr>
    </thead>
   <tbody>
    <% @book.each do |book| %>
     <tr>
      <td>
       <%= link_to image_tag @user.get_profile_image(100,100) %>
      </td>
      <td>
       <%= link_to book.title,book_path(book.id) %>
      </td>
      <td>
       <%= book.body %>
      </td>
      </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>
    