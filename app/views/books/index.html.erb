 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
   
   <% if @book.errors.any? %>
  <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
   <h2>User info</h2>
   <p><%= image_tag @user.get_profile_image(100,100) %></p>
    <table class="table">
     <tbody>
      <tr></tr>
      <tr>
       <th>name<th><%= @user.name %></th></th>
       <th></th>
      </tr>
      <tr>
       <th>introduction</th><%= @user.introduction %></th>
       <th></th>
      </tr>
     </tbody>
    </table>
   
<%= link_to edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block" do %>
 <i class="fas fa-user-cog" style="color: #6c757d;"></i>
<% end %>
 
 <h2 class="mt-3">New book</h2>
  
   <%= form_with model: @book do |f| %>
  
 
 <div class="form-group">
  <h6>Title</h6>
   <%= f.text_field :title %>
 </div>
 
 <div class="form-group">
  <h6>Opinion</h6>
   <%= f.text_area :body %>
 </div>

 <div class="form-group">
  <%= f.submit'Create Book',class:"btn btn-success" %>
 </div>
  <% end %>
</div>
   
<div class="col-md-8 offset-md-1">
 <h2>Books</h2>
 <table class="table table-hover table-inverse">
  <thead>
   <tr>
    <th></th>
    <th><strong>Title</strong></th>
    <th><strong>Opinion</strong></th>
    <th colspan="3"></th>
   </tr>
  </thead>
<tbody>
 <% @books.each do |book| %>
 <tr>
  <td>
   <%= link_to (image_tag book.user.get_profile_image(100,100)),user_path(book.user.id) %>
  </td>
  <td> 
   <%= link_to book.title,book_path(book.id) %>
  </td> 
  <td>
   <%= book.body %>
  </td>
 </tr>
<% end %>
</tbody>
 </table>
  </div>
 </div>
</div>
